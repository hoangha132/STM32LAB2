		  	  	  HAL_GPIO_WritePin(GPIOB, SEG_4, GPIO_PIN_RESET);
		  	  	  HAL_GPIO_WritePin(GPIOB, SEG_5, GPIO_PIN_RESET);
		  	  	  HAL_GPIO_WritePin(GPIOB, SEG_6, GPIO_PIN_RESET);
